{% extends 'pages/base.jinja' %}

{% block title %}
    Vietnam - Enlist
{% endblock %}


{% block content %}

    <h2>Here Is An Application Form:</h2>

    <article>
        
    <form method="POST" action="/processForm">
    
        <fieldset>
            <label>
                Your Name
                <input
                    name="name"
                    type="text"
                    placeholder="John Doe"
                    required
                >
            </label>

            <label>
                Your Age
                <input
                    name="Age"
                    type="number"
                    placeholder="18"
                    min="18"
                    max="50"
                    required
                >
            </label>
            <label>
                Your Specialty
                <input
                    name="Specialty"
                    type="choice"
                    placeholder="Infantry - Rifleman"
                    required
                >
            </label>

        </fieldset>

        <input type="submit" value="Send To Vietnam!"

    </form>

    </article>

{% endblock %}
